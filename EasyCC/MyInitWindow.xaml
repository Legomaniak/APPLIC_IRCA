<Window x:Class="EasyCC.MyInitWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EasyCC"
        mc:Ignorable="d"
        Title="MyInitWindow" Height="300" Width="300">
    <Grid>
        <TextBox Height="23" Margin="45,0,75,0" TextWrapping="Wrap" Text="{Binding Jmeno}" VerticalAlignment="Top"/>
        <ScrollViewer Margin="0,46,0,0">
            <TextBox Text="{Binding Text}" TextWrapping="Wrap" AcceptsReturn="True" AcceptsTab="True"/>
        </ScrollViewer>
        <Label Content="Jméno" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Button Content="OK" HorizontalAlignment="Right" Margin="0,0,0,0" Width="75" Height="23" VerticalAlignment="Top" Click="Button_Click"/>
        <Label Content="Kategorie" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,24,0,0"/>
        <TextBox Height="23" Margin="61,23,0,0" TextWrapping="Wrap" Text="{Binding Kategorie}" VerticalAlignment="Top"/>
    </Grid>
</Window>
